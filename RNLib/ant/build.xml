<project name="rn.lib">

    <property name="project.main.dir" location="../../" />
    <property file="../../ant/build-user.properties" />
    <property name="project.name" value="RNLib" />
    <import file="../../ant/build-imports.xml" />

    <target name="build">
        <echo message="Run build target ${project.name}" />
    </target>

    <target name="clear">

    </target>

    <target name="asdoc">
        <path id="asdoc.lib.path2" path="../src" />
        <pathconvert property="asdocs.as.path" refid="asdoc.lib.path2" dirsep="/" />
        <asdoc src.dir="${asdocs.as.path}" as.path="${asdocs.as.path}" lib.path.id="asdoc.lib.path2" dest.dir="${asdoc.result.dir}" />
    </target>

</project>
